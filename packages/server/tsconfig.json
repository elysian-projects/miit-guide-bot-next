{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/common": ["../../common/src"],
      "@/common/*": ["../../common/src/*"],
      "@/database/*": ["./database/*"],
      "@/entity/*": ["./entity/*"],
      "@/services/*": ["./services/*"],
      "@/types": ["./types"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
